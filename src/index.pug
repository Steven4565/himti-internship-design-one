mixin button(href, label) 
	a.button(href=href)=label

mixin card(image, title, desc) 
	.card-container 
		.top 
			img(src=image)
			h3=title
			p=desc 
		.bottom
			+button('#', 'Register Now')


mixin textbox() 
	.textbox-container 
		input(type="email", placeholder="Enter your email address")
		input(type="submit")

mixin lineContact(title, lineId) 
	.line-contact-container
		h4=title
		.line-id-container
			img(src="../assets/icons/line.png", alt="Line Logo")
			p=lineId

mixin icon(iconPath, value)
	.icon 
		img(src=iconPath)
		p=value


